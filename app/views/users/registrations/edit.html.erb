<div class="edit-area">
  <h2 class="edit-user">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <br>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :icon %><br />
      <%= f.file_field :icon, autofocus: true %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <br>
    <div class="field">
      <%= f.label :password %> <i>(変更しない場合は空白にしてください。)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :current_password %> <i>(変更を確認するためには、現在のパスワードが必要です。)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <br>
    <div class="actions"><br />
      <%= f.submit "Confirm!" %>
    </div>
  <% end %>

<%= link_to 'Quit', user_path(@user.id) %>
</div>


