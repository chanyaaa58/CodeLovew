<!DOCTYPE html>
<html>
  <head>
    <title>OriginalApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <div class="header-logo">
      <a href="/">CodeLovew</a>
    </div>
  </header>

  <body>
    <% if user_signed_in? %>
      <%= link_to "ALL Reviews", reviews_path %>
      <%= link_to "Review!", new_review_path %>
      <%= link_to "My page", user_path(current_user.id) %>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
      <% if current_user.admin? %>
        <%= link_to "管理画面", rails_admin_path %>
      <% end %>
    <% else %>
      <%= link_to "Log In", new_user_session_path %>
      <%= link_to "Sign Up", new_user_registration_path %>
      <%= link_to "Guest Log In", users_guest_sign_in_path, method: :post %>
      <%= link_to "Admin Guest Log In", users_guest_admin_sign_in_path, method: :post %>
    <% end %>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
