<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %></p>
        <% if user_signed_in? && current_user.id == @review.user_id %>
          <p><%= link_to "Edit", edit_review_comment_path(review, comment), remote: true %></p>
          <p><%= link_to "Delete", review_comment_path(comment.review_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>