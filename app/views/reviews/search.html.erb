<h1>Search Result</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Problem</th>
      <th>Detail</th>
      <th>Solution</th>
      <th>Content</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |review| %>
      <tr>
        <td><%= review.name %></td>
        <td><%= review.title %></td>
        <td><%= review.problem %></td>
        <td><%= review.detail %></td>
        <td><%= review.solution %></td>
        <td><%= review.content %></td>
        <td>
        <% review.labels.each do |label| %>
            <%= label.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: '削除しても本当に良いですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'ALL Reviews', reviews_path %>